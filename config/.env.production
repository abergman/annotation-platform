# Production Environment Configuration for Digital Ocean App Platform
# These will be overridden by App Platform environment variables

# Application
APP_NAME="Academic Annotation Platform"
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database (will be provided by App Platform database)
DATABASE_URL=${DATABASE_URL}

# Security (set these as secrets in App Platform)
SECRET_KEY=${SECRET_KEY}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - App Platform domain
ALLOWED_ORIGINS=https://academic-annotation-platform.ondigitalocean.app,https://academic-annotation-platform.ondigitalocean.app

# File handling - use tmp directories for App Platform
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE=10485760
EXPORT_DIR=/tmp/exports

# Cache/Redis
REDIS_URL=${REDIS_URL}

# WebSocket configuration
WS_PORT=3001
BACKEND_URL=https://academic-annotation-platform.ondigitalocean.app/api

# Annotation limits
MAX_ANNOTATIONS_PER_TEXT=1000
MAX_LABELS_PER_PROJECT=100

# Export formats
EXPORT_FORMATS=json,csv,xlsx,xml

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
WORKERS=1
MAX_WORKERS=4
WORKER_CONNECTIONS=1000

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Session settings
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_USER=5

# Batch processing
BATCH_SIZE=1000
MAX_BATCH_OPERATIONS=10
BATCH_TIMEOUT=300

# Health check intervals
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090