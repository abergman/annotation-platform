# Staging Environment Configuration

# Application
NODE_ENV=staging
PORT=3000
APP_NAME="Text Annotation System (Staging)"
APP_VERSION=1.0.0-staging

# Domain and CORS
DOMAIN=staging.your-domain.com
CORS_ORIGIN=https://staging.your-domain.com

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=annotation_staging
DB_USER=postgres
DB_PASSWORD=staging_db_password
DB_SSL=false
DB_POOL_MIN=1
DB_POOL_MAX=10

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password
REDIS_DB=1

# Authentication & Security
JWT_SECRET=staging_jwt_secret_key_minimum_32_chars
JWT_EXPIRES_IN=24h
SESSION_SECRET=staging_session_secret_key_minimum_32_chars
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200

# SSL/TLS (Self-signed for staging)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/staging.crt
SSL_KEY_PATH=/etc/nginx/ssl/staging.key

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE=/app/logs/staging.log
LOG_MAX_SIZE=5m
LOG_MAX_FILES=3

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=staging_grafana_password
HEALTH_CHECK_INTERVAL=60

# Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 4 * * *
BACKUP_RETENTION_DAYS=7

# Email (Development SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password
SMTP_FROM=staging@your-domain.com

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=pdf,txt,doc,docx,json
UPLOAD_PATH=/app/uploads

# Performance
COMPRESSION_ENABLED=true
CACHE_TTL=1800
MAX_REQUEST_SIZE=25mb
WORKER_PROCESSES=1

# Security Headers
HELMET_ENABLED=true
HSTS_MAX_AGE=300
CSP_REPORT_URI=/api/csp-report