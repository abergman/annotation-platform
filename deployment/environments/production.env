# Production environment configuration
NODE_ENV=production
LOG_LEVEL=warn
PORT=3000

# Database
DB_HOST=prod-db.internal
DB_PORT=5432
DB_NAME=annotation_production
DB_USER=prod_user
# DB_PASSWORD should be set via secrets management

# Redis
REDIS_HOST=prod-redis.internal
REDIS_PORT=6379
# REDIS_PASSWORD should be set via secrets management

# Security (set via secrets management)
# JWT_SECRET=
# SESSION_SECRET=

# CORS
CORS_ORIGIN=https://annotation.com

# Features
DEBUG_MODE=false
HOT_RELOAD=false
MOCK_EXTERNAL_APIS=false

# Logging
LOG_FILE=true
CONSOLE_LOG=false

# Performance
COMPRESSION_ENABLED=true
CACHE_TTL=3600

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_ENABLED=true
APM_ENABLED=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=50

# Security headers
HELMET_ENABLED=true
HTTPS_ONLY=true

# Database connection pooling
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000