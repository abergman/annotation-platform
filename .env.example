# Environment Configuration Example
# Copy this file to .env and update the values

# Node Environment
NODE_ENV=development

# Application Settings (FastAPI Backend)
DEBUG=False
HOST=0.0.0.0
PORT=8000

# WebSocket Server Settings
WEBSOCKET_PORT=8001
ENABLE_WEBSOCKETS=true
MAX_ROOMS_PER_USER=10
MESSAGE_QUEUE_SIZE=1000
PRESENCE_TIMEOUT=300

# Database Configuration
DATABASE_URL=postgresql://annotation_user:your_password@localhost:5432/annotation_db
MONGODB_URI=mongodb://localhost:27017/annotation

# Security Settings
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=24h
ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# Redis Configuration (optional, enables distributed WebSocket features)
REDIS_URL=redis://localhost:6379

# API URLs for WebSocket integration
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# CORS Settings (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,https://yourdomain.com

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
EXPORT_DIR=exports

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External Services
OPENAI_API_KEY=your-openai-key
HUGGINGFACE_API_KEY=your-huggingface-key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Optional: PostgreSQL Connection Details (alternative to DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=annotation_db
# DB_USER=annotation_user
# DB_PASSWORD=your_password