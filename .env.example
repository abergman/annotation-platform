# Environment Configuration for Annotation Platform
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
DOMAIN=localhost:3000
SSL_ENABLED=false

# Security
SESSION_SECRET=your-session-secret-key-here
JWT_SECRET=your-jwt-secret-key-here

# Database
MONGODB_URI=mongodb://localhost:27017/annotation_platform

# Redis (for sessions and WebSocket scaling)
REDIS_URL=redis://localhost:6379

# Email Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-email-password
EMAIL_FROM=noreply@annotat.ee

# File Storage (Digital Ocean Spaces)
STORAGE_ENDPOINT=https://nyc3.digitaloceanspaces.com
STORAGE_BUCKET=annotation-uploads
STORAGE_ACCESS_KEY=your-do-spaces-key
STORAGE_SECRET_KEY=your-do-spaces-secret
STORAGE_REGION=nyc3

# Digital Ocean Configuration
DIGITALOCEAN_ACCESS_TOKEN=your-do-access-token
DO_SPACES_KEY=your-spaces-access-key
DO_SPACES_SECRET=your-spaces-secret-key
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=annotation-backups

# Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# WebSocket
WS_PORT=3001
CORS_ORIGIN=http://localhost:3000

# Cleanup Configuration
CLEANUP_LOGS_DAYS=30
CLEANUP_TEMP_FILES_DAYS=7
CLEANUP_UPLOADS_DAYS=90

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7
COMPRESS_BACKUPS=true

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password
PROMETHEUS_PORT=9090

# Database Credentials (for Docker)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-mongo-password
MONGO_DATABASE=annotation_platform
REDIS_PASSWORD=your-redis-password

# GitHub Integration (for CI/CD)
GITHUB_TOKEN=your-github-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Testing
E2E_USER_EMAIL=test@example.com
E2E_USER_PASSWORD=testpassword123