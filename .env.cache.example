# Redis Cache Configuration

# Basic Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Connection Pooling
REDIS_MAX_CONNECTIONS=50

# Timeouts (seconds)
REDIS_SOCKET_TIMEOUT=5.0
REDIS_SOCKET_CONNECT_TIMEOUT=5.0

# TTL Settings (seconds)
REDIS_DEFAULT_TTL=3600    # 1 hour
REDIS_MAX_TTL=86400       # 24 hours

# Performance
REDIS_COMPRESSION_THRESHOLD=1024

# Deployment Mode (standalone, sentinel, cluster)
REDIS_MODE=standalone

# Sentinel Configuration (if using sentinel mode)
# REDIS_SENTINEL_HOSTS=localhost:26379,localhost:26380,localhost:26381
# REDIS_SENTINEL_SERVICE=mymaster

# Cluster Configuration (if using cluster mode)
# REDIS_CLUSTER_NODES=localhost:7001,localhost:7002,localhost:7003

# Cache Behavior
CACHE_WARM_ON_STARTUP=true
CACHE_HEALTH_CHECK_INTERVAL=30

# Environment-specific settings
CACHE_ENABLED=true
CACHE_DEBUG=false